{
  "name": "happyme",
  "version": "1.0.0",
  "description": "Let your happy self cheer up your sad self!",
  "main": "src/index.js",
  "scripts": {
    "start": "cd dist && httpserver",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "npm run js && npm run css && npm run html",
    "js": "browserify src/scripts/index.js -t babelify --outfile dist/app.js",
    "html": "cp src/index.html dist/",
    "css": "node-sass src/styles/reset.scss dist/reset.css && node-sass src/styles/style.scss dist/style.css",
    "lint": "eslint src/*.js",
    "c": "babel-node"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lucasmreis/happyme.git"
  },
  "author": "Lucas Reis",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/lucasmreis/happyme/issues"
  },
  "homepage": "https://github.com/lucasmreis/happyme#readme",
  "devDependencies": {
    "babel": "^5.8.20",
    "babel-eslint": "^4.0.5",
    "babelify": "^6.1.3",
    "browserify": "^11.0.1",
    "eslint": "^1.0.0",
    "httpserver": "^0.2.0"
  },
  "dependencies": {
    "bm-random": "^1.0.0",
    "deep-equal": "^1.0.0",
    "dom-classes": "0.0.1",
    "hash-string": "^1.0.0"
  }
}
